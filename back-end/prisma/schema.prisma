generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement()) //id do usuario
  name      String   //nome do usuario
  email     String   @unique //emal do usuario unico
  password  String   //senha do usuario
}

model Character {
  id          Int      @id @default(autoincrement()) //id do personagem
  name        String  //nome do personagem
  image       String  //Url da imagem do personagem
  status      String  // status atual do personagem
  species     String  // especie do personagem
  location    String  //localização atual do personagem
}